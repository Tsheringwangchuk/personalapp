<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".additionlevel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Level1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/level2_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLevel1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/lock" />

                <TextView
                    android:id="@+id/txtLevel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Level 1"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--  Level 1  -->
            <LinearLayout
                android:id="@+id/Level2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/level2_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLevel2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/lock" />

                <TextView
                    android:id="@+id/txtLevel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Level 2"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--  Level 2  -->
        </LinearLayout>
        <!--  First Row of Levels  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Level3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/level2_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLevel3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/lock" />

                <TextView
                    android:id="@+id/txtLevel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Level 3"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--  Level 3  -->
            <LinearLayout
                android:id="@+id/Level4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/level2_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLevel4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/lock" />

                <TextView
                    android:id="@+id/txtLevel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Level 4"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--  Level 4  -->
        </LinearLayout>
    </LinearLayout>

</ScrollView>